# PDF Math Agent Environment Variables
# Copy this file to .env and fill in your actual API keys

# ============================================
# LLM API Keys
# ============================================

# Groq API Key (Primary - Free tier available)
# Get your key at: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# Anthropic API Key (Optional - Fallback for complex tasks)
# Get your key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI API Key (Optional)
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# ============================================
# Configuration
# ============================================

# Override default LLM provider (groq, anthropic, openai)
LLM_PROVIDER=groq

# Override default model for Groq
# Options: llama-3.3-70b-versatile, llama-3.1-70b-versatile, mixtral-8x7b-32768
GROQ_MODEL=llama-3.3-70b-versatile

# ============================================
# Paths (Optional overrides)
# ============================================

# Override config file path
# CONFIG_PATH=./config.yaml

# Override output directory
# OUTPUT_DIR=./outputs

# Override checkpoint directory
# CHECKPOINT_DIR=./checkpoints

# Override cache directory
# CACHE_DIR=./cache

# ============================================
# Logging (Optional)
# ============================================

# Override log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
# LOG_LEVEL=INFO

# Log file path
# LOG_FILE=./logs/pdf_math_agent.log

# ============================================
# Performance & Debug (Optional)
# ============================================

# Enable debug mode
# DEBUG=false

# Enable verbose logging
# VERBOSE=false

# Save intermediate results
# SAVE_INTERMEDIATE=true

# Enable caching
# ENABLE_CACHE=true

# Maximum number of retries
# MAX_RETRIES=3

# ============================================
# OCR & Vision (Optional)
# ============================================

# Tesseract path (if not in PATH)
# TESSERACT_PATH=/usr/bin/tesseract

# Poppler path for pdf2image (if not in PATH)
# POPPLER_PATH=/usr/bin
